section#product-info(data-id=product._id)
  div.row
    div.col-md-6
      div.thumbnail
        img.responsive(src=product.images.main.path)
    div.col-md-6
      div.row
        div.col-md-8.col-md-offset-2
          h3.text-center= product.name
          p.text-justify= product.description.extended
      div.row
        div.col-md-4.col-md-offset-6
          table.table
            each value, key in product.elements
              tr
                td= key
                td= value
      div.row
        form(role='form')
          div.form-group
            div.row
              div.col-md-6.col-md-offset-4
                div.input-group
                  input#quantity.form-control.input-sm(type='number',
                    name='quantity', value=1)
                  span.input-group-btn
