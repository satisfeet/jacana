section#product-info(data-id=product._id)
  div.row
    div.col-md-6
      div.thumbnail
        img.responsive(src=product.images.main.path)
    div.col-md-6
      div.row
        div.col-md-10.col-md-offset-1
          h3.text-center= product.name
          p.text-justify= product.description.extended
      div.row
        div.col-md-8.col-md-offset-2
          table.table
            each value, key in product.elements
              tr
                td= key
                td= value
      div.row
        div.col-md-10.col-md-offset-1
          p.lead.text-center
            | Preis pro Stück: 
            strong= product.pricing.retail + '€'
            br
            small.text-muted Alle Preise inkl. MwSt und zzgl. Versandkosten
            br
      div.row
        form(role='form')
          div.form-group
            div.row
              div.col-md-6.col-md-offset-3
                div.input-group
                  input.form-control.input-sm(type='number',
                    id='pricing-quantity', name='pricing-quantity', value=1)
                  span.input-group-btn
                    button.btn.btn-sm.btn-primary Hinzufügen
