{

  "name": "satisfeet-store",

  "static": {
    "path": "/srv",
    "index": false,
    "passthrough": true
  },

  "engine": {
    "views": {
      "path": "/var/views/lib",
      "engine": "jade"
    },
    "styles": {
      "src": "/var/styles",
      "dest": "/srv/stylesheets",
      "prefix": "/stylesheets"
    },
    "builder": {
      "entry": "/app/index.js",
      "aliases": {
        "views": "../var/views/app"
      },
      "extensions": [
        ".js",
        ".json",
        ".html",
        ".jade"
      ],
      "output": "/srv/javascripts/build.js"
    }
  }

}
