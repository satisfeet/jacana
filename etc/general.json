{

    "name": "satisfeet",

    "store": {
        "mapper": {
            "db": {
                "safe": true
            }
        }
    },

    "static": {
        "path": "/srv",
        "passthrough": true
    },

    "engine": {
        "views": {
            "path": "/usr/views"
        },
        "styles": {
            "src": "/usr/styles",
            "dest": "/srv/stylesheets",
            "prefix": "/stylesheets"
        },
        "builder": {
            "entries": [
                "/app/index.js"
            ],
            "output": "/srv/javascripts/build.js",
            "aliases": {
                "views": "usr/views/app"
            }
        }
    },

    "mailer": {
        "service": "gmail"
    }

}
