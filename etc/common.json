{

    "name": "satisfeet",

    "store": {
        "mapper": {
            "db": {
                "safe": true
            }
        }
    },

    "static": {
        "path": "srv"
    },

    "engine": {
        "views": {
            "path": "usr/views"
        },
        "styles": {
            "input": "usr/styles/bootstrap-theme/index.less",
            "output": "srv/stylesheets/bootstrap-theme.css",
            "prefix": "/stylesheets"
        },
        "builder": {
            "entries": [
                "app/index.js"
            ],
            "output": "srv/javascripts/build.js",
            "aliases": {
                "views": "./usr/views/"
            }
        }
    },

    "mailer": {
        "service": "gmail",
        "account": {
            "username": "info@example.org",
            "password": "1234"
        }
    }

}
