{

  "name": "satisfeet-store",

  "static": {
    "path": "/srv",
    "passthrough": true
  },

  "engine": {
    "views": {
      "path": "/usr/views",
      "engine": "jade"
    },
    "styles": {
      "src": "/app/stylesheets",
      "dest": "/srv/stylesheets",
      "prefix": "/stylesheets"
    },
    "builder": {
      "entry": "/app/javascripts/index.js",
      "extensions": [
        ".js",
        ".json",
        ".html",
        ".jade"
      ],
      "output": "/srv/javascripts/build.js"
    }
  }

}
